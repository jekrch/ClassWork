@model CarDealership.Models.OCar
@{
    ViewBag.Title = "Details";
}


<div class="row car-details">

    <div class="col-sm-12 ">
        <div class="panel panel-default">
        
                <div class="panel-heading center">
                    <h1>
                        <p>@Model.Model @Model.Make @Model.Year</p>
                    </h1>
                </div>
            <div class="col-md-6 ">
                <div class="panel-body">
                    <h4>
                        <p class="center">@Model.Title</p>
                    </h4>
                    <div class="row center details-image-box">

                        <div class="center">
                            <img src="@Model.ImageUrl" class="details-image img-rounded" />
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-md-6 ">
                <div class="well">
                    <h3 class="center"> @string.Format("{0:c}", Model.Price)</h3> 
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>



