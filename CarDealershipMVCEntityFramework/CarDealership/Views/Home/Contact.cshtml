@model CarDealership.Models.ContactForm

@{
    ViewBag.Title = "Contact";
    var items = new List<SelectListItem>(){
      new SelectListItem() {
          Text = "6 months",
          Value = "6"
      },
            new SelectListItem() {
          Text = "12 months",
          Value = "12"
      },
            new SelectListItem() {
          Text = "24 months",
          Value = "24"
      },
            new SelectListItem() {
          Text = "36 months",
          Value = "36"
      }
    };
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm("Sales", "Home", FormMethod.Post))
{
    <div><br/>
        @Html.ValidationSummary(true, "", new {Style="color: red; font-weight: bold;"})
    </div>
    <div>
        <div class="form-group">
            <label>Name</label><br />
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="form-group">
            <label>Phone Number</label><br/>
            @Html.TextBoxFor(m => m.PhoneNumber)
            @Html.ValidationMessageFor(m => m.PhoneNumber)
        </div>
        <div class="form-group">
            <label>Time frame to purchase a new car</label>
            @Html.DropDownListFor(m => m.PurchaseTimeFrameInMonths, items)
        </div>
        <div class="form-group">
            <label>Email</label><br />
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-group">
            <label>Income</label><br />
            @Html.TextBoxFor(m => m.Income)
            @Html.ValidationMessageFor(m => m.Income)<br />
        </div>
        <div>
            <button>Submit</button>
        </div>
    </div>
}